@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <div class="text-center align-items-center justify-content-center">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <p> Are you sure you want to log out? </p>
            <form class="form-inline text-center justify-content-center align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Confirm</button>
            </form>
            <form class="form-inline text-center justify-content-center align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Cancel</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
        </div>
</header>